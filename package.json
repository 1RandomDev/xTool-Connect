{
  "name": "xtool-connect",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/1RandomDev/xTool-Connect",
  "keywords": [],
  "author": "1RandomDev",
  "license": "GPL-3.0",
  "main": "main/app.js",
  "scripts": {
    "start": "DEBUG_MODE=true electron main/app.js",
    "dist": "electron-builder --win --linux"
  },
  "build": {
    "productName": "xTool Connect",
    "appId": "xtool-connect",
    "files": [
      "icon.png",
      "main/**/*",
      "renderer/**/*"
    ],
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "artifactName": "${productName}-${version}-linux.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "artifactName": "${productName}-${version}-windows.${ext}"
    },
    "nsis": {
      "oneClick": false
    }
  },
  "dependencies": {
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0"
  }
}
